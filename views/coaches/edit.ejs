<h2>Edit Coach</h2>
<form action="/coaches/<%= coach.id %>" method="POST">
  <div>
    <label for="name">Coach Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      value="<%= coach.name %>"
      required
    />
  </div>

  <div>
    <label for="role">Role:</label>
    <input
      type="text"
      id="role"
      name="role"
      value="<%= coach.role %>"
      required
    />
  </div>

  <div>
    <label for="age">Age:</label>
    <input
      type="number"
      id="age"
      name="age"
      value="<%= coach.age %>"
      required
    />
  </div>

  <div>
    <label for="club_id">Club:</label>
    <select name="club_id" required>
      <% clubs.forEach(club => { %>
        <option value="<%= club.id %>" <%= club.id === coach.club_id ? 'selected' : '' %>>
          <%= club.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="submitBtn">Save Changes</button>
</form>
